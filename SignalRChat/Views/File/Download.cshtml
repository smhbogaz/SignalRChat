@model FileMedia?

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dosya Detayları</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon"       href="@Url.Content("~/img/LOGOmor.png")" type="image/x-icon">
    <link rel="stylesheet" href="@Url.Content("~/css/loader.css")" />
    <link rel="stylesheet" href="@Url.Content("~/views/file/css/download.css")" />
</head>
<body>
    <div class="container">
        <h2>Dosya Detayları</h2>
        <dl class="row file-details">
            @if (Model != null)
            {
                <div class="loader d-none"></div>
                <dt class="col-sm-4">Dosya Adı:</dt>
                <dd class="col-sm-8">@Model.DisplayFileName</dd>

                <dt class="col-sm-4">Dosya Tipi:</dt>
                <dd class="col-sm-8">@Model.FileType</dd>

                <dt class="col-sm-4">Dosya Boyutu:</dt>
                <dd class="col-sm-8">@(Model.FileSize / 1024) KB</dd>

                <dt class="col-sm-4">İndirme Sayısı:</dt>
                <dd class="col-sm-8">@Model.FileDownloadCount</dd>

                <dt class="col-sm-4">Yüklenme Tarihi:</dt>
                <dd class="col-sm-8">@Model.UploadDate.ToShortDateString()</dd>

                <dt class="col-sm-4">Açıklama:</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Bitiş Tarihi:</dt>
                <dd class="col-sm-8">@Model.ExpirationDate</dd>

                <dt class="col-sm-4">Aktif Durumu:</dt>
                <dd class="col-sm-8">@(Model.IsActive ? "Aktif" : "Pasif")</dd>

                <dt class="col-sm-4">Erişim Sayısı:</dt>
                <dd class="col-sm-8">@Model.AccessCount</dd>
                <dt class="col-sm-4"></dt>
                <a href="javascript:void(0);" class="download-btn" data-id="@Model.GuidId">Dosyayı İndir</a>
                <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
                <script src="@Url.Content("~/js/sweetalert.js")"></script>
                <script src="@Url.Content("~/views/file/js/download.js")"></script>
            }
            else
            {
                <dt class="col-sm-4">Dosya Bulunamadı</dt>
            }

        </dl>
    </div>
</body>
</html>
