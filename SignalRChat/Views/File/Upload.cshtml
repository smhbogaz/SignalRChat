<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dosya Yükle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="icon"       href="@Url.Content("~/img/LOGOmor.png")" type="image/x-icon">
    <link rel="stylesheet" href="@Url.Content("~/css/loader.css")" />
    <link rel="stylesheet" href="@Url.Content("~/views/file/css/upload.css")" />
</head>
<body>
    <div class="container">
        <h2>Dosya Yükle</h2>
        <form enctype="multipart/form-data" action="@Url.Action("Upload","File")">
            <div class="loader d-none"></div>

            <div class="form-group">
                <label for="file_name">Dosya Adı</label>
                <input type="text" name="fileName" class="form-control" id="file_name" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="file">Dosya</label>
                <input type="file" name="file" accept="*.*" class="form-control-file" id="file" required>
            </div>
            <div class="form-group">
                <label for="description">Açıklama</label>
                <input type="text" name="description" class="form-control" id="description" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="expirationDate">Bitiş Tarihi</label>
                <input type="date" name="expirationDate" class="form-control" id="expirationDate" required>
            </div>
            <div class="form-group">
                <label>Durum</label><br>
                <div class="form-check form-check-inline">
                    <input type="radio" name="active" value="true" class="form-check-input" id="is_active_true" required>
                    <label class="form-check-label" for="is_active_true">Aktif</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" name="active" value="false" class="form-check-input" id="is_active_false" required>
                    <label class="form-check-label" for="is_active_false">Aktif Değil</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="@Url.Content("~/js/sweetalert.js")"></script>
    <script src="@Url.Content("~/views/file/js/upload.js")"></script>
</body>
</html>
