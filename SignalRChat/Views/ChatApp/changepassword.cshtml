@{
    Layout = "_Layout";
}

<div class="card-3d-wrap mx-auto">
    <div class="card-3d-wrapper">
        <div class="card-front d-flex align-items-center justify-content-center">
            <div class="loader d-none "></div>
            <div class="center-wrap">
                <div class="section text-center">
                    <h4 class="mb-4 pb-3">E-Mailinize Gelen Kodu Giriniz</h4>
                    <form action="@Url.Action("Changepassword","ChatApp")" method="post" id="change">
                        <div class="form-group mt-2">
                            <input type="password" name="sessionValid" class="form-style" placeholder="Gelen Kod" id="logpass" autocomplete="off">
                            <i class="input-icon uil uil-lock-alt"></i>
                        </div>
                        <div class="form-group mt-2">
                            <input type="password" name="newPassword" class="form-style" placeholder="Yeni Şifre" id="logpass" autocomplete="off">
                            <i class="input-icon uil uil-lock-alt"></i>
                        </div>
                        <button type="submit" class="btn mt-4">SIFIRLA</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>