@{
    Layout = "_Layout";
}
<label for="reg-log">Epostanıza Gelen Kodu Giriniz</label>
<div class="card-3d-wrap mx-auto">
    <div class="card-3d-wrapper">
        <div class="card-front d-flex align-items-center justify-content-center">
            <div class="loader d-none"></div>
            <div class="center-wrap">
                <div class="section text-center">
                    <h4 class="mb-4 pb-3">Doğrula</h4>
                    <form action="@Url.Action("Verify","ChatApp")" method="post" id="verifyForm">
                        <div class="form-group mt-2">
                            <input type="number" name="accountCode" class="form-style" placeholder="Kodu Giriniz" id="logpass" autocomplete="off">
                            <i class="input-icon uil uil-lock-alt"></i>
                        </div>
                        <button type="submit" class="btn mt-4">Doğrula</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>