@{
    Layout = "_Layout";
    var db = Globals.Instance.Db!;
}
<table class="table bg-dark text-white">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Email</th>
            <th scope="col">Resim</th>
            <th scope="col">Ban</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in db.Members.Where(x => x.Resim != null).AsNoTracking().ToList())
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td><img src="@Url.Content($"~/img/user/{item.Resim}")" alt="resim yok" /></td>
                <td>@item.isBanned</td>
                <td>
                    <form action="@Url.Action("DeleteImageForUser","Admin")" method="post" id="@item.Id" class="delete-image-form">
                        <input class="bg-dark text-white border-0" type="hidden" name="id" value="@item.Id">
                        <input class="btn btn-danger" type="submit" value="Resmi Sil" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>